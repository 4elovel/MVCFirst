@model MVCFirst.Models.ViewModels.CreateDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />
            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="product.Description" class="control-label"></label>
                <input asp-for="product.Description" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="product.Slug" class="control-label"></label>
                <input asp-for="product.Slug" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="product.Image" class="control-label"></label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="product.StockQuantity" class="control-label"></label>
                <input asp-for="product.StockQuantity" class="form-control" />

            </div>
            <br />
            <div class="form-group">
                 <select name="Category">
                    @foreach (var i in Model.cat)
                    {
                        @if(Model.product.Category is not null && i.Name==Model.product.Category.Name)
                        {
                            <option value="@i.Name" selected>@i.Name</option>
                            continue;
                        }
                        <option value="@i.Name">@i.Name</option>
                    } 
      </select> 
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
